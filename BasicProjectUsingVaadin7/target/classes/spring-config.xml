<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

	<context:component-scan base-package="com.example.BasicProjectUsingVaadin"></context:component-scan>

	<bean id="masterServiceImpl" class="com.example.BasicProjectUsingVaadin7.impl.MasterServiceImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="serviceImpl" class="com.example.BasicProjectUsingVaadin7.impl.SpringDataServiceImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>

	<bean id="entityManagerService" class="com.example.BasicProjectUsingVaadin7.impl.EntityManagerServiceImpl">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
